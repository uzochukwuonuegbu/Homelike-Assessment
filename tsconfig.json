{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": ["es2020.string", "ES2019.Array"],
    "downlevelIteration": true,
    "rootDir": ".",
    "target": "es6",
    "module": "CommonJS",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": ".build"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
